<?php

/*The var_dump function displays structured 
information about variables/expressions 
including its type and value.
*/

$a = 123; // decimal number
var_dump($a);//int(123)
echo "<br>";//
 
$b = -123; // a negative number
var_dump($b);//int(-123)
echo "<br>";
 
$c = 0x1A; // hexadecimal number
var_dump($c);//int(26)
echo "<br>";
 
$d = 0123; // octal number
var_dump($d);//int(83)
?>


